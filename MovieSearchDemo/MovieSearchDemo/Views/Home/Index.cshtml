<script>
    $('#btnSubmit').click(function () {

        $.ajax(
            {
                url: '/Home/Index',
                type: 'POST',
                data: { 'movieId': $('#movieId').val() },

                success: function (response) {
                   // $('#completeMovieList').hide();
                    $('#filteredMovie').html(response);
                    $('#filteredMovie').show();
                },
                error: function (error) {
                    console.log(error);
                }
            });
    });
</script>






